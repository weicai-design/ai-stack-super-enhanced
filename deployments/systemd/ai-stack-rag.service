[Unit]
Description=AI Stack RAG Sidecar Service
After=network.target
Wants=network-online.target

[Service]
Type=simple
User=ai-stack
Group=ai-stack
WorkingDirectory=/opt/ai-stack/rag
Environment="PATH=/opt/ai-stack/rag/venv/bin:/usr/local/bin:/usr/bin:/bin"
Environment="PYTHONUNBUFFERED=1"
Environment="PORT=8011"
Environment="HOST=0.0.0.0"

# 启动命令
ExecStart=/opt/ai-stack/rag/venv/bin/uvicorn api.app:app --host 0.0.0.0 --port 8011 --workers 2

# 重启策略
Restart=always
RestartSec=10
StartLimitInterval=300
StartLimitBurst=5

# 资源限制
LimitNOFILE=65536
LimitNPROC=4096

# 安全设置
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/opt/ai-stack/rag/data /opt/ai-stack/rag/logs

# 日志
StandardOutput=journal
StandardError=journal
SyslogIdentifier=ai-stack-rag

[Install]
WantedBy=multi-user.target

